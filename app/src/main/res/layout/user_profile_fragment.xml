<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/columbiablue">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/userImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImage"
        android:id="@+id/idField"
        android:text="id:"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idField"
        android:id="@+id/id"
        android:text="id"
        android:textSize="22dp"
        android:layout_marginStart="26dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:id="@+id/nameField"
        android:text="username:"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameField"
        android:id="@+id/username"
        android:text="username"
        android:textSize="22dp"
        android:layout_marginStart="26dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:id="@+id/createAtField"
        android:text="Create At:"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAtField"
        android:id="@+id/createAt"
        android:text="01.01.2001"
        android:textSize="22dp"
        android:layout_marginStart="26dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createAt"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createAt"
            android:layout_marginTop="50dp"
            android:text="Change Password"
            android:id="@+id/changepass"

            android:layout_margin="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createAt"
            android:layout_marginTop="50dp"
            android:text="Delete Account"

            android:layout_margin="5dp"

            android:backgroundTint="@color/red"
            />

    </LinearLayout>




</RelativeLayout>